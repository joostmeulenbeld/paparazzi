  </header>

  <init fun="delftacopter_controller_init()"/>
  <makefile>
      <define name="DC_STATE_FEEDBACK"/>
      <define name="OBSV_DEFAULT" value="0"/>
      <define name="CONT_DEFAULT" value="0"/>
      <file name="system_matrix.c"/>
      <file name="state_space.c"/>
      <file name="delftacopter_observer.c"/>
